/* pages/ceshi/ceshi.wxss */
.container{
    overflow: hidden;
}
.combo_box{

}
.combo_head{
    width: 100%;
    height:100rpx;
    background: #f3d5da;
    border: 1rpx solid #e4cedf;
    border-radius: 30rpx 30rpx 0 0 ;
    display: flex;
    justify-content: center;
    align-items: center;
}
.combo_content{
    width: 100%;
    height: 0;
    background: #fafafa;
    transition: height 0.5s;
    -moz-transition: height 0.5s;
    -webkit-transition: height 0.5s;
    -o-transition: height 0.5s;
    overflow: hidden;
}
.combo_content_show{
    height: 700rpx;
}